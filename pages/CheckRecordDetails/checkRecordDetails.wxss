.container {
  width: 100vw;
  height: 100vh;
  position: relative;
}

.tui-chatroom-navigatorbar{
  position: relative;
  /*top: 0;*/
  flex-shrink: 0;
  width: 750rpx;
  height: 160rpx;
  background-color: #006EFF;
}

.tui-chatroom-navigatorbar-back{
    position: absolute;
    width: 60rpx;
    height: 60rpx;
    left: 24rpx;
    bottom: 15rpx;
}

.conversation-title {
  position: absolute;
  width: 100%;
  height: 88rpx;
  line-height: 56rpx;
  font-size: 36rpx;
  color: #FFFFFF;
  z-index:100;
  bottom: 10%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.message-list {
  flex: 1;
  width: 100vw;
  overflow-y: scroll;
}

.message-title {
  display: flex;
  width: 100%;
  justify-content: space-between;
  flex-wrap: wrap;
  border-bottom: 1rpx solid #ccc;
}

.message-title-name {
  margin-right: 36rpx;
}

.message-body-span {
  max-width: 80vw;
  line-height: 52rpx;
  margin: 24rpx 48rpx;
  padding: 30rpx 24rpx;
  background: #F8F8F8;
  border: 1px solid #D9D9D9;
  border-radius: 10px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  white-space: pre-wrap;
}
.message-body-span-text {
  width: 100%;
  font-size: small;
  display: inline;
  word-wrap: break-word;
  word-break: break-all;
}
