.merger-message {
  display: flex;
  padding: 10rpx 24rpx;
  background-color: #fff;
  border-radius: 2px 10px 10px 10px;
  border: 1px solid #ada2a2;
}
.my-merger {
  border-radius: 10px 2px 10px 10px;
  border: 1px solid rgba(0,110,255,0.30);
  padding: 20rpx;
}
.merger-content-title {
  font-family: PingFangSC-Medium;
  max-width: 60vw;
  line-height: 34rpx;
  font-size: 28rpx;
  color: #000000;
  letter-spacing: 0;
  margin-bottom: 12rpx;
}
.merger-content-description {
  font-family: PingFangSC-Regular;
  max-width: 60vw;
  line-height: 34rpx;
  font-size: 24rpx;
  color: #666;
  letter-spacing: 0;
  margin-bottom: 12rpx;
  word-break: break-word;
}
.merger-content-following {
  font-family: PingFangSC-Medium;
  max-width: 60vw;
  line-height: 34rpx;
  font-size: 24rpx;
  color: #000;
  letter-spacing: 0;
  margin-bottom: 12rpx;
  word-break: break-word;
}